<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/solar/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/blog/styles.css">
</head>
<body>
    <!-- Navigation Sidebar -->
    <aside class="cms-sidebar">
        <div class="cms-brand">
            <h3>Blog Admin</h3>
        </div>

        <ul class="cms-nav">
            <!-- Top Navigation Group -->
            <template v-if="navigation && navigation.top">
            <li class="cms-nav-group">
                <h4 class="cms-nav-group-title">Main</h4>
                <ul>
                    <template v-for="link in navigation.top">
                    <li>
                        <a 
                            :href="link.url" 
                            :class="['cms-nav-item', {active: link.active}]"
                        >
                            <span class="cms-nav-icon" v-if="link.icon">
                                <i class="bi" :class="link.icon"></i>
                            </span>
                            <span>{{ link.label }}</span>
                            </a>
                            </li>
                            </template>
                            </ul>
                            </li>
                            </template>

                            <!-- Side Navigation Group -->
                            <template v-if="navigation && navigation.side">
                            <li class="cms-nav-group">
                            <h4 class="cms-nav-group-title">Management</h4>
                            <ul>
                            <template v-for="link in navigation.side">
                            <li>
                            <a 
                            :href="link.url" 
                            :class="['cms-nav-item', {active: link.active}]"
                            >
                            <span class="cms-nav-icon" v-if="link.icon">
                                <i class="bi" :class="link.icon"></i>
                            </span>
                            <span>{{ link.label }}</span>
                        </a>
                    </li>
                    </template>
                </ul>
            </li>
            </template>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="cms-content">
        <div class="cms-topbar">
            <div class="d-flex align-items-center">
                <button class="cms-topbar-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
                    <i class="bi bi-list"></i>
                </button>
                <h2 class="mb-0">{{ .Title }}</h2>
            </div>
        </div>

        <div class="container-fluid p-4">
            <template v-if="breadcrumbs">
            <nav class="breadcrumb mb-4">
                <template v-for="crumb in breadcrumbs">
                <a class="breadcrumb-item" :href="crumb.url">{{ crumb.label }}</a>
                </template>
            </nav>
            </template>

            <div class="cms-body">
                <template v-html="content"></template>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/cms.js"></script>
</body>
</html>
