<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/cms.css">
    <style>
        .cms-sidebar {
            min-height: 100vh;
            width: 250px;
            position: fixed;
            left: 0;
            top: 0;
            background-color: #2c3e50;
            color: #ecf0f1;
            overflow-y: auto;
        }
        .cms-content {
            margin-left: 250px;
            flex: 1;
        }
        .cms-nav-group {
            margin-bottom: 2rem;
        }
        .cms-nav-group-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #95a5a6;
            padding: 0.5rem 0;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        .cms-nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #ecf0f1;
            text-decoration: none;
            border-radius: 0.25rem;
            transition: all 0.2s;
        }
        .cms-nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
        .cms-nav-item.active {
            background-color: #3498db;
            color: #fff;
            font-weight: 600;
        }
        .cms-nav-icon {
            margin-right: 0.5rem;
            font-size: 1.1em;
        }
        .cms-brand {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .cms-brand h3 {
            margin: 0;
            font-size: 1.5rem;
        }
        .cms-topbar {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            padding: 1rem 2rem;
            margin-left: 250px;
        }
    </style>
</head>
<body>
    <!-- Navigation Sidebar -->
    <aside class="cms-sidebar">
        <div class="cms-brand p-4">
            <h3 class="fw-bold">Blog Admin</h3>
        </div>

        <nav class="cms-nav">
            <!-- Top Navigation Group -->
            <template v-if="navigation && navigation.top">
            <div class="cms-nav-group">
                <div class="cms-nav-group-title">Main</div>
                <template v-for="link in navigation.top">
                <a 
                    :href="link.url" 
                    :class="['cms-nav-item', {active: link.active}]"
                >
                    <template v-if="link.icon">
                    <span class="cms-nav-icon">{{ link.icon }}</span>
                    </template>
                    {{ link.label }}
                </a>
                </template>
            </div>
            </template>

            <!-- Side Navigation Group -->
            <template v-if="navigation && navigation.side">
            <div class="cms-nav-group">
                <div class="cms-nav-group-title">Management</div>
                <template v-for="link in navigation.side">
                <a 
                    :href="link.url" 
                    :class="['cms-nav-item', {active: link.active}]"
                >
                    <template v-if="link.icon">
                    <span class="cms-nav-icon">{{ link.icon }}</span>
                    </template>
                    {{ link.label }}
                </a>
                </template>
            </div>
            </template>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="cms-content">
        <div class="cms-topbar">
            <h2 class="mb-0">{{ .Title }}</h2>
        </div>

        <div class="container-fluid p-4">
            <template v-if="breadcrumbs">
            <nav class="breadcrumb mb-4">
                <template v-for="crumb in breadcrumbs">
                <a class="breadcrumb-item" :href="crumb.url">{{ crumb.label }}</a>
                </template>
            </nav>
            </template>

            <div class="cms-body">
                <template v-html="content"></template>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/cms.js"></script>
</body>
</html>
